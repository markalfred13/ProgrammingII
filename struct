#include <stdio.h>
#include <string.h>
#include <stdlib.h>

typedef struct {
    int whole;
    int num;
    int den;
} Fraction;

Fraction createFraction(Fraction f1, Fraction f2);
void displayFraction(Fraction frac);
Fraction addFraction(Fraction f1, Fraction f2);

int main(){

        Fraction frac1, frac2;
        createFraction(frac1, frac2);
        Fraction add(frac1, frac2);
        
    return 0;
}

Fraction add(Fraction f1, Fraction f2) {
    Fraction result;
    result.num = f1.num + f2.num*f1.den;
    result.den = f1.den*f2.num;

    return result;
    }


    Fraction createFraction(Fraction f1, Fraction f2){
        printf("Enter the first numerator: ");
        scanf("%d", &f1.num);

        printf("Enter the first denumerator: ");
        scanf("%d", &f1.den);

        printf("\nEnter the second numerator: ");
        scanf("%d", &f2.num);

        printf("Enter the second denumerator: ");
        scanf("%d", &f2.den);

        displayFraction(f1);
        displayFraction(f2);
}

void displayFraction(Fraction frac){
    printf("%d / %d\n", frac.num, frac.den);
}
