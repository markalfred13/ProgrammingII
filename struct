#include <stdio.h>
#include <string.h>
#include <stdlib.h>

typedef struct {
    int whole;
    int num;
    int den;
} Fraction;

Fraction createFraction(Fraction f1, Fraction f2);
void displayFraction(Fraction frac);
Fraction addFraction(Fraction f1, Fraction f2);

int main(){

        Fraction f1 = createFraction(1,2);
        Fraction f2;
        f2 = createFraction(2,3);
        Fraction f3 = addFraction(f1,f2);  
             
    return 0;
}

Fraction add(Fraction f1, Fraction f2) {
    Fraction result;
    result.num = f1.num + f2.num*f1.den;
    result.den = f1.den*f2.num;

    return result;
    }


    Fraction createFraction(int num, int den){
        Fraction f;

        f.num = num;
        f.den = den;

        return f;
}

void displayFraction(Fraction frac){
    printf("%d / %d\n", frac.num, frac.den);
}
